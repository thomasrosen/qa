datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum DataType {
  String
  Number
  Boolean
  Thing /// a reference to a Thing
}

enum SchemaType {
  /// allowed/used schema.org types
  /// Thing /// is the default. just leave it empty
  Person /// for a user
  DefinedTerm /// for a word / job title / etc
}

